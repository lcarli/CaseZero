# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Code files
[*.{cs,js,ts,tsx,jsx,json,xml,yml,yaml}]
indent_style = space
indent_size = 2

# C# files
[*.cs]
indent_size = 4

# SQL files
[*.sql]
indent_size = 4

# Markdown files
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Dockerfile
[Dockerfile*]
indent_size = 4

# Bicep files
[*.bicep]
indent_size = 2

# Shell scripts
[*.sh]
indent_size = 2

# Python files
[*.py]
indent_size = 4

# HTML files
[*.html]
indent_size = 2

# CSS/SCSS files
[*.{css,scss,sass}]
indent_size = 2

# Configuration files
[*.{config,conf}]
indent_size = 2

# Package manager files
[package.json]
indent_size = 2

[*.csproj]
indent_size = 2

[*.sln]
indent_style = tab
